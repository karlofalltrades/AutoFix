<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopActivity">

    <Button
        android:id="@+id/book"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:accessibilityHeading="false"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="BOOK NOW" />
    <Button
        android:id="@+id/parts"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:accessibilityHeading="false"
        android:padding="20dp"
        android:layout_marginTop="0dp"
        android:text="AVAIL PARTS" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic_shop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher_background"/>

    <RelativeLayout
        android:id="@+id/colorsquare"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/name_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Your Shop Name"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <ImageView android:src="@drawable/ic_place_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/location_shop"
            android:layout_below="@+id/name_shop"
            />
        <TextView
            android:id="@+id/location_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_shop"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Shop Location"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/contact_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_shop"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Contact #"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/email_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_shop"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Email Address"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/circleBorder"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <RatingBar
            android:id="@+id/rating_shop"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="3sp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5" />
        <TextView android:id="@+id/rate_number"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/rating_shop"
            android:text="4.5"
            android:textSize="30sp"
            android:layout_marginTop="15sp"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>

    <!--<Button-->
        <!--android:id="@+id/mekaniko"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:accessibilityHeading="false"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"-->
        <!--android:text="Available Mekaniko" />-->

</LinearLayout>
</ScrollView>