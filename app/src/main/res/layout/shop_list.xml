<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shop_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/shop_image"
            android:text="Shop Name Here"
            android:textSize="25sp" />

        <TextView android:id="@+id/shop_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/shop_image"
            android:text="Shop Address Here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView android:id="@+id/shop_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_addr"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/shop_image"
            android:text="Distance"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView android:id="@+id/shop_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_dist"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/shop_image"
            android:text="Shop Contact Number"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView android:id="@+id/shop_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_contact"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/shop_image"
            android:text="Shop Contact Number"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

</RelativeLayout>