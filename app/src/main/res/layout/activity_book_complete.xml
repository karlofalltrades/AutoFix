<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".BookCompleteActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/b_emp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher_background"/>

        <RelativeLayout
            android:id="@+id/colorsquare"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/b_emp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Mekaniko Name"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/b_emp_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Mekaniko Contact"
                android:textColor="@color/white"
                android:layout_below="@+id/b_emp_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/b_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_emp_cont"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Shop Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/b_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_shop"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/b_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_date"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/b_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_time"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Booking Status"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/circleBorder"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <RatingBar
                android:id="@+id/b_rate"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="3sp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5" />
            <TextView android:id="@+id/b_rate_num"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/b_rate"
                android:text="4.5"
                android:textSize="30sp"
                android:layout_marginTop="15sp"
                android:theme="@style/RatingBar"/>
        </RelativeLayout>

        <!--<Button-->
        <!--android:id="@+id/finish_book"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:accessibilityHeading="false"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:text="Available Mekaniko" />-->
        <Button android:id="@+id/finish_book"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_alignParentBottom="true"
            android:text="REPAIR DONE"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</ScrollView>