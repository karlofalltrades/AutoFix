<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewItemActivity"
    android:scrollbars="vertical">

    <ImageView
        android:id="@+id/item_viewpic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/colorsquare"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/i_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Your Shop Name"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/i_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Shop Location"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/i_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_brand"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Quantity"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/i_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_qty"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Email Address"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:focusableInTouchMode="true">

        <ImageView android:id="@+id/subt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:layout_gravity="left"
            android:textSize="20dp"/>
        <EditText android:id="@+id/edit_qty"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="left"
            android:inputType="numberPassword"
            android:text="1"
            android:textSize="20dp"
            />
        <ImageView android:id="@+id/plus_qty"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_gravity="left"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/add_cart"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:accessibilityHeading="false"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:text="ADD TO CART" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="- OR -"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/order_now"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:accessibilityHeading="false"
        android:padding="15dp"
        android:text="PLACE ORDER" />

</LinearLayout>
</ScrollView>